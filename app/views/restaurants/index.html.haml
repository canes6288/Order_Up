%p#notice= notice
%h1 Restaurants
%table
  %thead
    %tr
      %th Name
      %th{colspan: "3"}
  %tbody
    - @restaurants.each do |restaurant|
      %tr
        %td
          = link_to restaurant.name, restaurant_orders_path(restaurant)
      %tr
        %td= link_to 'Items', restaurant_items_path(restaurant)
        %td= link_to 'Orders', restaurant_orders_path(restaurant)
        %td= link_to 'Edit', edit_restaurant_path(restaurant)
        %td= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Restaurant', new_restaurant_path