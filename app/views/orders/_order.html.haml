.row
  .col-md-12
    .panel
      .row.details
        .col-md-10.header
          = "##{order.number} #{order.location} - #{order.section}#{order.seat} (#{order.created_at.strftime("%-l:%M %p")})"
        .col-md-2.text-right
          = link_to restaurant_order_path(order.restaurant, order), method: :delete do
            %button.btn.btn-primary{ type: "button", class: 'complete-btn', data: { action: 'complete-order' } } 
              = fa_icon "check-circle", text: 'Done'
      %hr
      .items
        .row.header
          .col-md-6
            Item
          .col-md-6
            Notes
        = render partial: 'orders/line_items', locals: { order: order }
        .row.total
          .col-md-1
            %label
              Total:
          .col-md-1
            %label
              = "$#{order.items.pluck(:price).sum}"